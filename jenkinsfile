pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = '9f4187c3-8181-4d40-81d7-513dc9f140ce'
    }
    stages {
        stage('Remove old container') {
            steps {
                script {
                    // prevent pipeline failure if container doesn't exist
                    sh 'docker stop frontend || true'
                    sh 'docker rm frontend || true'
                    sh 'docker system prune -af'
                }
            }
        }
    
        stage('dockerbuild') {
            steps {
                sh 'docker build -t frontend .'
            }
        }
         stage('Push to Docker Hub') {
            steps {

            withCredentials([usernamePassword(credentialsId: DOCKERHUB_CREDENTIALS, usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')])
           {
                    sh 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD'

                    // Tag Docker image
                    sh 'docker tag frontend:latest joemuldowney/property-react'

                    // Push Docker image to Docker Hub
                    sh 'docker push joemuldowney/property-react'
           }
            }
        }

        stage('Deploy'){
            steps{
                sh 'docker run -d -p 3000:3000 --name frontend joemuldowney/property-react'
            }
        }
    }
}